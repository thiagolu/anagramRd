<div class="block">

<p id="notice"><%= notice %></p>

<h1>Listing the words tested</h1>

<table>
  <thead>
    <tr>
      <th>First Word</th>
      <th>Second Word</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dados.each do |dado| %>
      <tr>
        <td><%= dado.word1 %></td>
        <td><%= dado.word2 %></td>
        <td><%= dado.result %></td>
        <td><%= link_to 'Show', dado %></td>
        <td><%= link_to 'Destroy', dado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dado', new_dado_path %>

</div>
